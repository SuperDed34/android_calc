<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="50sp"
        >

        <TextView
            android:id="@+id/output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:background="@color/main"
            android:textColor="@color/white"
            android:textSize="50sp"
            android:padding="20sp"
            android:paddingVertical="50sp"
            android:textAlignment="textEnd"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="40sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6sp"
            >

            <Button
                android:id="@+id/button_C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2sp"
                android:backgroundTint="@color/red"
                android:onClick="makeAction"
                android:text="C"
                android:textSize="40sp"
                app:cornerRadius="5sp" />
            <Button
                android:id="@+id/button_percent"
                android:onClick="makeAction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:layout_marginHorizontal="2sp"
                android:text="%"
                app:cornerRadius="5sp"/>

            <Button
                android:id="@+id/button_root"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="makeAction"
                android:textSize="40sp"
                android:layout_marginHorizontal="2sp"
                android:text="âˆš"
                app:cornerRadius="5sp"
                />

            <Button
                android:id="@+id/button_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="makeAction"
                android:textSize="40sp"
                android:layout_marginHorizontal="2sp"
                android:text="+"
                app:cornerRadius="5sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3sp"
            >

            <Button
                android:id="@+id/button_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2sp"
                android:backgroundTint="@color/button_main"
                android:text="1"
                android:onClick="makeAction"
                android:textSize="40sp"
                app:cornerRadius="5sp" />
            <Button
                android:id="@+id/button_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/button_main"
                android:textSize="40sp"
                android:layout_marginHorizontal="2sp"
                android:onClick="makeAction"
                android:text="2"
                app:cornerRadius="5sp"/>

            <Button
                android:id="@+id/button_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/button_main"
                android:textSize="40sp"
                android:onClick="makeAction"
                android:layout_marginHorizontal="2sp"
                android:text="3"
                app:cornerRadius="5sp"
                />

            <Button
                android:id="@+id/button_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="makeAction"
                android:textSize="40sp"
                android:layout_marginHorizontal="2sp"
                android:text="-"
                app:cornerRadius="5sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3sp"

            >

            <Button
                android:id="@+id/button_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2sp"
                android:backgroundTint="@color/button_main"
                android:onClick="makeAction"
                android:text="4"
                android:textSize="40sp"
                app:cornerRadius="5sp" />
            <Button
                android:id="@+id/button_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/button_main"
                android:textSize="40sp"
                android:layout_marginHorizontal="2sp"
                android:onClick="makeAction"
                android:text="5"
                app:cornerRadius="5sp"/>

            <Button
                android:id="@+id/button_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/button_main"
                android:textSize="40sp"
                android:layout_marginHorizontal="2sp"
                android:text="6"
                android:onClick="makeAction"
                app:cornerRadius="5sp"
                />

            <Button
                android:id="@+id/button_mult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="makeAction"
                android:textSize="40sp"
                android:layout_marginHorizontal="2sp"
                android:text="*"
                app:cornerRadius="5sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3sp"
            >

            <Button
                android:id="@+id/button_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2sp"
                android:backgroundTint="@color/button_main"
                android:onClick="makeAction"
                android:text="7"
                android:textSize="40sp"
                app:cornerRadius="5sp" />
            <Button
                android:id="@+id/button_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/button_main"
                android:textSize="40sp"
                android:layout_marginHorizontal="2sp"
                android:onClick="makeAction"
                android:text="8"
                app:cornerRadius="5sp"/>

            <Button
                android:id="@+id/button_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/button_main"
                android:textSize="40sp"
                android:layout_marginHorizontal="2sp"
                android:onClick="makeAction"
                android:text="9"
                app:cornerRadius="5sp"
                />

            <Button
                android:id="@+id/button_sep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="makeAction"
                android:textSize="40sp"
                android:layout_marginHorizontal="2sp"
                android:text="/"
                app:cornerRadius="5sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3sp"
            >

            <Button
                android:id="@+id/button_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2sp"
                android:backgroundTint="@color/button_main"
                android:text="."
                android:onClick="makeAction"
                android:textSize="40sp"
                app:cornerRadius="5sp" />
            <Button
                android:id="@+id/button_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/button_main"
                android:textSize="40sp"
                android:layout_marginHorizontal="2sp"
                android:onClick="makeAction"
                android:text="0"
                app:cornerRadius="5sp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/button_main"
                android:textSize="40sp"
                android:layout_marginHorizontal="2sp"
                android:text="()"
                android:onClick="makeAction"
                app:cornerRadius="5sp"
                />

            <Button
                android:id="@+id/button_uq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/equail"
                android:textSize="40sp"
                android:layout_marginHorizontal="2sp"
                android:text="="
                android:onClick="makeAction"
                app:cornerRadius="5sp"/>
        </LinearLayout>









    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>